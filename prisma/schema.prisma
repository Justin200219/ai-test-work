datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  words    Word[]
}

model Word {
  id       String  @id @default(uuid())
  text     String
  meaning  String
  userId   String
  user     User @relation(fields: [userId], references: [id])
}
